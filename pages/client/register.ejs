<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>RegisterUser</title>
    <link rel="stylesheet" href="../../public/css/bootstrap.min.css">
</head>
<body>
<form action="/register" method="post">
    <div class="container">
        <div class="modal fade" id="registerModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h1 class="modal-title">Sign Up</h1>
                    </div>
                    <div class="modal-body">
                        <form action="" name="register-form" id="register-member">
                            <div class="form-group">
                                <label>First Name</label>
                                <label>
                                    <input class="form-control" type="text" name="firstName">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <label>
                                    <input class="form-control" type="text" name="lastName">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <label>
                                    <input class="form-control" type="text" name="email">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <label>
                                    <input class="form-control" type="password" name="password">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <label>
                                    <input class="form-control" type="password" name="confirm-password">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <label>
                                    <input class="form-control" type="text" name="address">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <label>
                                    <input class="form-control" type="text" name="phone">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Avatar</label>
                                <label>
                                    <input class="form-control" type="text" name="avatar">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Gender</label>
                                <label>
                                    <select name="gender">
                                        <option value="1">Male</option>
                                        <option value="0">Female</option>
                                        <option value="2">Other</option>
                                    </select>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Birthday</label>
                                <label>
                                    <input class="form-control" type="date" name="birthday">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="reset" class="btn btn-defaut" name="btn-reset" value="Reset">Reset
                                </button>
                                <button type="submit" class="btn btn-primary" name="btn-register" value="Register">Sign
                                    Up
                                </button>
                            </div>
                        </form>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</body>
</html>